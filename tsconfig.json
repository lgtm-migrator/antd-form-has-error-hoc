{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "outDir": "lib",
    "sourceMap": false,
    // "declaration": true,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
