{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "outDir": "./lib/",
    "sourceMap": false,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "moduleResolution": "node",
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
